<div class="row topmin20 btm20">
  <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 col-lg-offset-2 col-md-offset-2">
    <%= form_tag products_path, :method => 'get', :id => "products_search" do %>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
        <div class="input-group">
          <div class="form-group">
            <%= text_field_tag :name, params[:name], class: 'form-control', placeholder:'Search Keyword', style:'font-family:FontAwesome' %>
          </div>
        </div>
      </div>
      <div class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
        <div class="dropdown">
          <%= select_tag "product_type_id", options_from_collection_for_select(product_types, "id", "name"), :include_blank => true, class: 'btn btn-default btn-block dropdown-toggle' %>
        </div>
      </div>
      <div class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
        <%= submit_tag "Search", :name => nil, :class => 'btn btn-primary btn-block' %>
      </div>
      </p>
      <div id="order_hidden">
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
      </div>
    <% end %>
  </div>
</div>