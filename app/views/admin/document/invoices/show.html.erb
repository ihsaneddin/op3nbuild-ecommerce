<h1> Invoice for Order(<%= @invoice.order.number %>) </h1>

<p>
  <strong>Amount:</strong>
  <%= @invoice.amount %>
</p>

<p>
  <strong>Status:</strong>
  <%= @invoice.state %>
</p>

<% if @invoice.may_generate_credit? %>
	<p>
	  <%= link_to "Generate Credit Request", admin_balances_credits_path(requests_credit: { invoice_id: @invoice.id }), method: :post, :class => 'button' %>
	</p>
<% end %>

<p>
  <%= link_to "View PDF", admin_document_invoice_path(@invoice, :format => 'pdf'), :class => 'button' %>
</p>

<p>
  <%= link_to "View All", admin_document_invoices_path, :class => 'button' %>
</p>
