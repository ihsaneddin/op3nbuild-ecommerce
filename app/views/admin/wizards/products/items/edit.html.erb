<%= javascript_include_tag 'admin/countries' %>

<h2>Edit Product <%= @product.name %></h2>


<div id="article-sidebar" class="sidebar">
  <%= nested_form_for @product, :url  => admin_wizards_products_item_path(@product), method: :patch,
                          :html => {:class => ''}  do |form| %>
    <%#= render :partial => '/admin/merchandise/products/form', :locals => {:form => form}%>
    <%= render :partial => 'form', :locals => {:form => form } %>
    
    <div class=" generic_submit_button">
      <%= submit_tag "Update",
                      :class  => "button",
                      :id     => "create_product_button" %>
    </div>
  <% end %>
</div>
