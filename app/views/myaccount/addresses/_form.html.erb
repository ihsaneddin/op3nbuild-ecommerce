<% if @address.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@address.errors.count, "error") %> prohibited this shipping address from being saved:</h2>
    <div>
      <% @address.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  </div>
<% end %>
<table class="table">

<form class="form-inline">
<div class="form-group">
  <div class='main-address'>
    <div class="inline twelve large-12 ">
      <tr class="field six large-6 columns">
        <td><%= f.label :first_name %></td>
        <td>&nbsp;:&nbsp;</td>
        <td><%= f.text_field :first_name, :class => 'form-control' %>
      </tr>

      <tr class="field six large-6 columns">
        <td><%= f.label :last_name %></td>
        <td>&nbsp;:&nbsp;</td>
        <td><%= f.text_field :last_name, :class => 'form-control' %><td>
      </tr>
    </div>
    <div class='clear'></div>
    <div class="twelve large-12 columns">
      <div class="field">
        <tr>
          <td><%= f.label :address1 %></td>
          <td>&nbsp;:&nbsp;</td>
          <td><%= f.text_field :address1, :class => 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :address2 %></td>
          <td>&nbsp;:&nbsp;</td>
          <td><%= f.text_field :address2, :class => 'form-control' %></td>
        </tr>
      </div>
    </div>

    <div class='clearfix'></div>
    <div class=" twelve large-12">
      <tr class="field five columns">
        <td><%= f.label :city %></td>
        <td>&nbsp;:&nbsp;</td>
        <td><%= f.text_field :city,  :class => 'form-control' %></td>
      </tr>

    
      <% if Settings.require_state_in_address %>
        <tr class="field four large-4 columns">

          <td><%= f.label    :state_id, "State/Province" %></td>
          <td>&nbsp;:&nbsp;</td>
          <td>
          <div class="dropdown">
          <%= f.select  :state_id, @states, {},
                        {  :include_blank => true, class: 'btn btn-default btn-block dropdown-toggle' }
                        %>
          </div>
          </td>
        </tr>
      <% elsif countries.size == 1 %>
        <tr class="field column">
          <td><%= f.label :country_id, "Country" %></td>
          <td>&nbsp;:&nbsp;</td>
          <td><%= countries.first.name %></td>
          <div class="dropdown">
          <%= f.hidden_field   :country_id %>
          </div>
        </tr>
      <% else %>
        <tr class="field column">
          <td><%= f.label    :country_id, "Country" %></td>
          <td>&nbsp;:&nbsp;</td>
          <td>
          <div class="dropdown">
          <%= f.select   :country_id, select_countries, {},
                        { class: 'btn btn-default btn-block dropdown-toggle', :include_blank => true }
                        %>
          </div>
          </td>
        </tr>
      <% end %>
    

      <tr class="field two large-2 columns">
        <td><%= f.label :zip_code %></td>
        <td>&nbsp;:&nbsp;</td>
        <td><%= f.text_field :zip_code,  :class => 'form-control' %></td>
      </tr>
    </div>
  </div>
  <div class="field twelve large-12 column" style='margin-bottom:10px;'>
    <label for='address_default' class='ten large-10' style='margin-top:3px;display: inline-block;'>
      <tr>
        <td colspan="3"><center><%= f.check_box :default, :class => 'columns' %>
        Make this my default shipping address</center></td>
      </tr>
    </label>
  </div>

  <tr class="actions twelve columns">
    <td colspan="3"><center><%= f.submit 'Submit', :class => 'btn btn-primary' %></center></td>
  </tr>
  <div class='clearfix'></div>
</div>
</form>
</table>


