<div class='col-xs-12 col-sm-12 col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3' align="center">
  <h3> Edit Credit Card </h3>

  <%= form_for(@credit_card, :url => myaccount_credit_card_path(@credit_card)) do |f| %>
    <%= render :partial => 'form', :locals => {:f => f} %>
  <% end %>

  <%= link_to 'Show', myaccount_credit_card_path( @credit_card ), :class => 'btn btn-default' %> 
  <%= link_to 'View All', myaccount_credit_cards_path, :class => 'btn btn-default' %>
</div>
